<%= tinymce_assets %>
<%= form_for @ticket, validate: true do |f| %>
 
  <% if @ticket.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@ticket.errors.count, "error") %> prohibited
        this ticket from being saved:
      </h2>
      <ul>
        <% @ticket.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description, :class => "tinymce", :rows => 5, :cols => 12 %>
  </p>

  <p>
    <%= f.label :select_category %><br>
  <%= f.collection_select :category_id, Category.order(:name),:id,:name, include_blank: true %>
  </p>
  

  <!-- <p>
    <%#= f.label :status %><br>
    <%#= f.text_field :status %>
  </p> -->

  <p>
    <%= f.submit %>
  </p>
 
<% end %>
